<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), http: {multipart: true}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, required: true, autofocus: true, autocomplete: "first name" %>
  </div>

  <div id="calendar"></div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, required: true, autofocus: true, autocomplete: "last name" %>
  </div>

  <div class="form-group">
    <%= f.label :avatar do %><br />
      <%= f.file_field :avatar, class: "form-control" %>
      <%= f.hidden_field :avatar_cache %>
    <% end %>
  </div>

  <div><%= f.label :date_of_birth %><br />
    <%= f.date_select :date_of_birth %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, required: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
